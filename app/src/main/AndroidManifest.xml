        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlowerApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
